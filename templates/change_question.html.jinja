{% extends 'base_template.html.jinja' %}

{% block title %}
Vraag wijzigen
{% endblock %}

{% block additional_navbuttons %}
<button class="button back" type="button" onclick="location.href='/notes_list'">Terug naar overzicht</button>
{% endblock %}

{% block content %}

<div class="container">
    <div class="note-edit">
        <form id="notes-form" action="#" method="post">
            <h1 id="form-title">Handmatig vraag wijzigen</h1>

            <div class="questions category">
                <label id="category-label" for="category-ans">
                    Wijzig vraag <br>
                        <textarea class="input-form" type="text" id="category-ans" name="changed_question" value="{{ default_value }}">{{ default_value }}</textarea>
                </label>
            </div>

            <div class="form-buttons">
                <a href="/notes_list"><input class="button save" id="submit" type="submit" value="Opslaan"></a>
                <input class="button again" id="reset" type="reset" value="Opnieuw">
            </div>
        </form>
        <br>
        <a href="/change_open_question_gen/{{ questions_id }}"><button class="button generate" type="button">Genereer een open vraag</button></a>
        <a href="/change_mc_question_gen/{{ questions_id }}"><button class="button generate" type="button">Genereer een multiple choice vraag</button></a>
    </div>
</div>

    {% endblock %}